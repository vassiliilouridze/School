<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.henallux.vassili.labo2.ChildActivity">

    <Button
        android:text="Send result to parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:id="@+id/sendResultToParent" />

    <Button
        android:text="Phone Call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sendResultToParent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:id="@+id/phoneCall" />

    <Button
        android:text="Internet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phoneCall"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:id="@+id/internet" />
</RelativeLayout>
